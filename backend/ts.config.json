{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "outDir": "build",
    "rootDir": ".",
    "composite": true,
    "removeComments": true,
    "noEmit": true,
    "isolatedModules": false,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "files": ["package.json"],
  "include": ["app", "scripts"],
  "exclude": ["node_modules", "build"]
}